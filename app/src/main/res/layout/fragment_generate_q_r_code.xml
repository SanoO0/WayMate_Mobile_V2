<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.qrcode.GenerateQRCodeFragment">

    <View
        android:id="@+id/bookmarksBlack"
        android:layout_width="410dp"
        android:layout_height="410dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_bookmark_fill_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bookmarksRed"
        android:layout_width="362dp"
        android:layout_height="360dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_bookmark_fill_24"
        android:backgroundTint="@color/redWaymate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qrcode_generator"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="320dp"
        android:layout_height="260dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookmarksBlack" />

    <View
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="260dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookmarksBlack" />

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="80dp"
        android:layout_height="133dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.488">

        <TextView
            android:id="@+id/tv_titleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleDate" />

        <TextView
            android:id="@+id/tv_titleDepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleDepart" />

        <TextView
            android:id="@+id/tv_titleDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleDestination" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutData"
        android:layout_width="83dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.476">

        <TextView
            android:id="@+id/tv_dataDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data" />

        <TextView
            android:id="@+id/tv_dataDepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data" />

        <TextView
            android:id="@+id/tv_dataDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/today"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>